{
  "name": "import-export-client",
  "version": "1.0.0",
  "description": "Interface client Electron pour le syst√®me de gestion maritime",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "test": "jest"
  },
  "build": {
    "appId": "com.votreentreprise.importexport",
    "productName": "Import Export Manager",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/images/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
