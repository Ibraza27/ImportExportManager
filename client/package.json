    "electron-fetch": "^1.9.1",
    "electron-log": "^5.0.1",
    "flatpickr": "^4.6.13",
    "jquery": "^3.7.1",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "quagga": "^0.6.16",
    "select2": "^4.1.0-rc.0",
    "socket.io-client": "^4.8.1",
    "sweetalert2": "^11.6.13"
  },
  "devDependencies": {
    "electron": "^37.2.3",
    "electron-builder": "^24.6.4"
  }
